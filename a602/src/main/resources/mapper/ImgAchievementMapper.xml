<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.mapper.ImgAchievementMapper">
    <insert id="add">
        insert into img_achievement (achievement_id, url) VALUE (#{id} , #{url})
    </insert>
    <update id="update">
        update img_achievement
        <set>
            <if test="url != null">url = #{url}</if>
        </set>
        where id = #{id}
    </update>
    <delete id="delete" parameterType="java.lang.Integer">
        delete from img_achievement where achievement_id = #{id}
    </delete>
    <delete id="deleteByUrl" parameterType="java.lang.String">
        delete from img_achievement where url = #{url}
    </delete>

    <select id="getUrl" resultType="java.lang.String" parameterType="java.lang.Integer">
        select url from img_achievement where achievement_id = #{id}
    </select>

    <select id="getId" resultType="java.lang.Integer" parameterType="java.lang.Integer">
        select id from img_achievement where achievement_id = #{id}
    </select>
    <select id="getOriginalUrl" resultType="java.lang.String" parameterType="java.lang.Integer">
        select url from img_achievement where id = #{id}
    </select>
    <select id="getUrlById" resultType="java.lang.String" parameterType="java.lang.Integer">
        select url from img_achievement where id = #{id}
    </select>
</mapper>
